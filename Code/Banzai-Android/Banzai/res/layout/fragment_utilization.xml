<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/utilization_aggregate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/utilization_aggregate_title"
            android:textColor="@color/titles_text"
            android:textSize="20sp" />

        <com.pan.banzai.BanzaiLineGraph
            android:id="@+id/utilization_aggregate_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/utilization_breakdown_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/utilization_breakdown_title"
            android:textColor="@color/titles_text"
            android:textSize="20sp" />

        <com.pan.banzai.BanzaiLineGraph
            android:id="@+id/utilization_breakdown_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>